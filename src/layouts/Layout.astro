---
import Header from "../components/Header.astro";
import Footer from "../components/footer.astro";
import "@fontsource-variable/onest";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Bienvenido a mi portafolio profesional" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/CR.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <Header />
  <body>
    <slot />
    
    <style is:global>
      :root {
        --soft-green: #4ecca3; /* Un verde m√°s suave y menos puro */
        --dark-bg: #121212;
      }
      html {
        font-family: "Onest Variable", sans-serif;
        background: linear-gradient(135deg, var(--dark-bg) 0%, #000000 100%);
        color: white ;
      }
      body {
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        overscroll-behavior: none;
      }
      </style>
  </body>
  <Footer/>
</html>
